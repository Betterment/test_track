<article class="card">
  <div class="ArticleHeader">
    <h2 class="top">Details</h2>
  </div>
  <table class="borderless bottom">
    <tr class="population-row">
      <td>Population Size</td>
      <td>
        <span class='population'><%= split.assignments.count %></span>
        <span>(<%= link_to "Upload New Assignments", new_admin_split_bulk_assignment_path(split), class: 'upload-new-assignments-link' %>)</span>
      </td>
    </tr>
    <tr>
      <td>Created At</td>
      <td><%= split.created_at %></td>
    </tr>
    <tr>
      <td>Finished?</td>
      <td><%= split.finished? %></td>
    </tr>
    <tr>
      <td>Owner App</td>
      <td><%= split.owner_app.name %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td>
        <div class="split-decision">
          <span class="flag">🏁</span>
          <%= link_to "Decide Split", new_admin_split_decision_path(split), class: 'decide-split-link' %>
        </div>
      </td>
    </tr>
  </table>
</article>
