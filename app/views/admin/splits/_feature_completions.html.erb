<article class="InfoCard my-5">
  <div class="InfoCard-titleContainer">
    <h4>Feature Completions</h4>
  </div>
  <hr class="InfoCard-divider">
  <% if split.feature_gate? %>
    <% if split.feature_completions.any? %>
      <div class="InfoCard-description">
        <table class="fs-VariantsTable DescriptionTable">
          <thead>
            <th>App</th>
            <th>Version</th>
          </thead>
          <tbody>
            <% split.feature_completions.by_app_and_version.each do |feature_completion| %>
              <tr>
                <td><%= feature_completion.app.name %></td>
                <td><%= feature_completion.version %>+</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="EmptyTable EmptyTable--centered p-5">
          <p>
            <strong>This feature has not been marked as complete for any app versions yet.</strong>
            <br>
            As a result, this feature is not visible to customer installed apps, e.g. mobile (barring alpha tester overrides).
          </p>
        </div>
      <% end %>
    <% else %>
      <div class="EmptyTable EmptyTable--centered p-5">
        <p>
          Feature completions don't apply to experiments.
        </p>
      </div>
    <% end %>
  </div>
</article>
